<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="7.5dp"
    android:paddingBottom="8dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/jacket_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:scaleType="fitXY"
            android:src="@drawable/jacket1" />

        <TextView
            android:id="@+id/jacket_price"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="7.7dp"
            android:layout_marginBottom="7.7dp"
            android:background="@drawable/shape_rectangle_item"
            android:fontFamily="@font/ari"
            android:gravity="center"
            android:text="$ 329"
            android:textColor="#ffffff"
            android:textSize="8sp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:background="@drawable/shape_rectangle_item"
        android:orientation="vertical"
        android:paddingLeft="7.7dp"
        android:paddingTop="12dp"
        android:paddingBottom="31dp">

        <TextView
            android:id="@+id/jacket_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_display_regular"
            android:text="INFO &amp; CARE"
            android:textColor="#ffffff"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/jacket_description"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6.5dp"
            android:fontFamily="@font/ari"
            android:lineSpacingExtra="3dp"
            android:text="Keep it cool and stylish by wearing this black coloured jacket."
            android:textColor="#ffffff"
            android:textSize="7sp" />
    </LinearLayout>

</LinearLayout>
